@model Flow.Models.ExternalLoginListViewModel
@using Microsoft.Owin.Security

<div class="wraper-layer">
    <div class="login-layer">
        <h2>Flow Administrering</h2>
        <h4>Använd Google för att logga in.</h4>

        @{
            var loginProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes();

            using (Html.BeginForm("ExternalLogin", "Account", new {ReturnUrl = Model.ReturnUrl}))
            {
                @Html.AntiForgeryToken()
                <div id="socialLoginList">
                    <p>
                        @foreach (AuthenticationDescription p in loginProviders)
                        {
                            <button type="submit" class="btn btn-default" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Logga in med @p.Caption">@p.AuthenticationType</button>
                        }
                    </p>
                </div>
            }
        }
        <div class="backbtn">
            @Html.ActionLink("Tillbaka", "Index", "App", null, new {@class="backlink"})
        </div>
    </div>
    
</div>
